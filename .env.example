# B2B OSINT Tool - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="B2B OSINT Tool"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT=production  # development, staging, production

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB (Primary Database)
DATABASE_URL=mongodb://admin:b2b_password@localhost:27017/b2b_osint?authSource=admin

# MongoDB Atlas (Cloud - for production)
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/b2b_osint

# Docker MongoDB credentials
MONGODB_USER=admin
MONGODB_PASSWORD=b2b_password

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Auth0 Configuration (for production)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_API_AUDIENCE=your-api-audience
AUTH0_ISSUER=https://your-domain.auth0.com/
AUTH0_ALGORITHMS=RS256

# ============================================
# STRIPE PAYMENT CONFIGURATION
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# REDIS & CELERY CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# SEARCH API KEYS
# ============================================
# Google Custom Search API (RECOMMENDED)
GOOGLE_SEARCH_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-custom-search-engine-id
GOOGLE_API_KEY=your-google-api-key  # For other Google APIs
GOOGLE_CSE_ID=your-custom-search-engine-id

# Bing Search API (Optional)
BING_SEARCH_API_KEY=your-bing-api-key
BING_API_KEY=your-bing-api-key

# SerpAPI (Optional alternative)
SERPAPI_KEY=your-serpapi-key

# ============================================
# AI/LLM API KEYS
# ============================================
# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# ============================================
# GMAIL CONFIGURATION
# ============================================
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# ============================================
# EXTERNAL SCRAPING SERVICES
# ============================================
# Bright Data (recommended for production)
BRIGHT_DATA_API_KEY=your-bright-data-api-key

# ScraperAPI
SCRAPER_API_KEY=your-scraper-api-key

# Browserless (for headless browser automation)
BROWSERLESS_API_KEY=your-browserless-api-key

# ============================================
# CLOUD STORAGE (for crawled data)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Google Cloud Storage (Alternative)
# GCS_BUCKET=your-gcs-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# SEARCH & INDEXING
# ============================================
# Elasticsearch/OpenSearch (for full-text search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

# ============================================
# APPLICATION LIMITS & SETTINGS
# ============================================
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_DOMAIN=100
RATE_LIMIT_PER_MINUTE=60
EMAIL_VERIFICATION_TIMEOUT=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ============================================
# API CONFIGURATION
# ============================================
API_V1_PREFIX=/api/v1

# ============================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================
# Datadog
# DATADOG_API_KEY=your-datadog-api-key
# DATADOG_APP_KEY=your-datadog-app-key

# Sentry (Error Tracking)
# SENTRY_DSN=your-sentry-dsn

# New Relic
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
